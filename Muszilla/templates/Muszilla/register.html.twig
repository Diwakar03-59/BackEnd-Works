{% extends "base.html.twig" %}


{% block title %}
  {{ 'Register' }}
{% endblock %}

{% block body %}

<body>
  <div class="back" id="back">
    <div class="container">
      <div class="contents color">
        <form action="{{ path('app_login') }}" method="post" id="form" enctype="multipart/form-data">
          <span class="white">Name:</span>
          <input type="text" class="box" id="fname" name="fname" required placeholder="" onblur="validateFirstName()">
          <span style="color: red;">*</span>
          <br>
          <span id="checkfname" class="checkfname" style="color: red;"></span>
          <br>
          <span class="white">Email:</span>
          <input type="text" class="box" id="email" name="email" required placeholder="" onblur="validateEmail()">
          <span style="color: red;">*</span>
          <br>
          <span id="checkemail" class="checkemail" style="color: red;"></span>
          <br>
          <span class="white">Contact: </span>
          <input type="text" class="box" id="contact" name="contact" required placeholder="" onblur="validateContact()">
          <span style="color: red;">*</span>
          <br>
          <span id="checkcontact" class="checkcontact" style="color: red;"></span>
          <br>
          <span class="white-color">
            Interests: </span>
            <span onblur="validateInterest()">
              <input type="checkbox" id="pop" name="genre[]" value="Pop" required>
              <label class="wt" for="pop">Pop</label>
              <input type="checkbox" id="rock" name="genre[]" value="Rock" >
              <label class="wt" for="rock">Rock</label>
              <input type="checkbox" name="genre[]" id="classic" value="Classic" >
              <label class="wt" for="classic">Classic</label>
              <input type="checkbox" name="genre[]" id="hiphop" value="Hip Hop" >
              <label class="wt" for="hiphop">Hip Hop</label>
            </span>
          <br>
          <span id="checkinterest" class="checkinterest" style="color: red;"></span>
          <br>
          <span class="white">Password:</span>
          <input type="password" class="box" id="password" name="password" required password placeholder="" onblur="loginPasswordValidate()">
          <span style="color: red;">*</span>
          <br>
          <span id="checkpass" class="checkpass" style="color: red;"></span>
          <br>
          <span class="white">Your Image:</span>
          <input type="file" class="box" name="fileToUpload" id="fileToUpload">
          <span style="color: red;">*</span>
          <br><br>

          <div class="flex ">
            <input class="login hover" type="submit" name="submit" id="submit" value="Register">
          </div>
          <div class="create">
            <p class="">Already have an account? <a class="error" href="{{ path('app_login') }}">Login</a></p>
          </div>
        </form>
      </div>
    </div>
</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.birds.min.js"></script>
<script>
VANTA.BIRDS({
  el: "#back",
  mouseControls: true,
  touchControls: true,
  gyroControls: false,
  minHeight: 200.00,
  minWidth: 200.00,
  scale: 1.00,
  scaleMobile: 1.00,
  color1: 0x110f0f,
  color2: 0x13c4eb
})
</script>

</html>
{% endblock %}
