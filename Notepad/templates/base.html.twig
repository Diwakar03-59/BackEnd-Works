<!DOCTYPE html>
<html>
  <head>
      <meta charset="UTF-8">
      <title>{% block title %}Welcome!{% endblock %}</title>
      <link rel="stylesheet" href="/css/index.css">
      <script lang="javascript" type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
      <script src="/script/app.js"></script> 
      <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
      {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
      {% block stylesheets %}
          {{ encore_entry_link_tags('app') }}
      {% endblock %}

      {% block javascripts %}
          {{ encore_entry_script_tags('app') }}
      {% endblock %}
  </head>
  <body onload="callCount()">
    <div class="back">
      <div class="container">
        <div class="contents">
          <div class="section1">
            <div class="head">
              <h3>Availability - </h3>
            </div>
            <div class="data">
              <div class="2_wheeler">
                <h2>2 WHEELERS: </h2>
                <p>No. of Slots Available - </p>
                <p>{% block slots_available2 %}{% endblock %}</p>
              </div>
              <div class="4_wheeler">
                <h2>4 WHEELERS: </h2>
                <p>No. of Slots Available - </p>
                <p>{% block slots_available4 %}{% endblock %}</p>
              </div>
            </div>
  
          </div>
          <div class="section2">
            <div class="head">
              <h3>Tickets</h3>
            </div>
            <div class="data">
              <table>
                <thead>
                  <tr>
                    <th>Slot Number</th>
                    <th>Vehicle Number</th>
                    <th>Time of Entry</th>
                    <th>Time of Exit</th>
                    <th>Status</th>
                  </tr>
                </thead>
                {% block tickets_table %}
                <div class="tickets"></div>
                {% endblock %}
              </table>
            </div>
          </div>
          <div class="section3">
            <div class="head">
              <h3>Booking</h3>
            </div>
            <div class="data">
              <form action= ""  method="" >
              <label class="label" for="vehiclenumber"> Vehicle Number</label>
              <input type="text" id="vehiclenumber" name="vehiclenumber" value=""><br>
                <p>Type of Vehicle</p>
                <input type="radio" id="vehicletype1" name="vehicletype" value="2-wheeler" required>
                <label class="label" for="vehicletype"> Bike</label>
                <input class="input" type="radio" id="vehicletype2" name="vehicletype" value="4-wheeler">
                <label class="label" for="vehicletype"> Car</label><br>
                {# <input class="submit" id="submit" name="submit" type="submit" value="Book" onclick=""> #}
                <button id="submit" name="submit" type="submit" >Book</button>
              </form>
            </div>
          </div>
          <div class="section4">
            <div class="head">
                <h3>Release Slot</h3>
              </div>
              <div class="data">
                <form action= ""  method="" >
                <label class="label" for="slotID"> Slot ID</label>
                <input type="text" id="slotID" name="slotID"><br>
                  <button id="release" name="release" type="submit" >Release</button>
                </form>
              </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
