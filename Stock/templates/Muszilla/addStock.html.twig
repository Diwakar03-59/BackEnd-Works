{% extends "base.html.twig" %}

{% block name %}
{{ user.name }}
{% endblock %}

{% block body %}

{% block music %}
<div class="banner-container">
  <div class="page-wrapper banner-wrap">
    <div class="addmusic-content">
      <h2 class="black">Stocks Added:</h2>
      {% if stock_by_user is defined %}
      <div >
        {% for stock in stock_by_user %}
          <input type="text" id="stock-name" value="{{ stock.name }}">
          <input type="text" id="price" value="{{ stock.price }}">
          <button value="{{stock.id}}" class="button_one">
            <a href="{{path('app_updateStock')}}"></a>Update</button>
        {% endfor %}
        
      </div>
      {% endif %}
      <div class="error-msg">
        <span>{% if error is defined %}{{ error }}{% endif %}
        </span>
      </div>
      <div class="title-head">
        <h1>Add Stock</h1>
      </div>

      <div class="form-container">
        <form action="{{ path('app_addStock') }}" method="post" enctype="multipart/form-data">

          <div class="form-input">
            <label for="stock-name">Stock Name</label>
            <input type="text" name="stock-name" id="stock-name" placeholder="Enter Stock name" required>
            <span class="error" id="checkName"></span>
          </div>

          <div class="form-input">
            <label for="price">Stock Price</label>
            <input type="text" name="price" id="price" placeholder="Price" required>
            <span class="error" id="checkPrice"></span>
          </div>

          <div class="form-input">
            <input type="submit" name="submit" id="submit-btn" value="Add Stock">
          </div>
        </form>
      </div>
      <div class="back-container">
        <a href="{{ path('app_home') }}" class="back-btn">Go Back</a>
      </div>
      
    </div>
    <div>

      
    </div>
  </div>
</div>
{% endblock %}
{% endblock %}
