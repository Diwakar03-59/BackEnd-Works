<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="/css/login.css">
        <link rel="stylesheet" href="/css/home.css">
        <script lang="javascript" type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="/script/app.js"></script>
        <script src="/script/ajax.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="main-container">
        <!-- Navbar container -->
        <div class="navbar">
            <div class="page-wrapper">
            <div class="nav">
                <div class="nav-logo">
                <a href="{{ path('app_home') }}"><img src="logo.jpg" alt="">StockZilla</a>
                </div>
                <ul class="nav-ul">
                <li><a href="">{% block name %}{% endblock %}</a></li>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_addStock') }}">Add Stock</a></li>
                <li><a href="{{ path('app_logout') }}">Sign Out</a></li>
                </ul>
            </div>
            </div>
        </div>
        </div>
        
        {% block body %}
        {% block stocks %}{% endblock %}
        {% endblock %}
    </body>
</html>
